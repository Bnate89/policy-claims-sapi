		</on-error-propagate>

		<!-- ANY - 500 (Catch-all) -->
		<on-error-propagate type="ANY" doc:name="On ANY">
			<ee:transform doc:name="Set 500 Response">
				<ee:message>
					<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	errorCode: "INTERNAL_SERVER_ERROR",
	message: "An unexpected error occurred",
	details: error.description default "",
	correlationId: vars.correlationId default uuid(),
	timestamp: now()
}]]></ee:set-payload>
				</ee:message>
				<ee:variables>
					<ee:set-variable variableName="httpStatus"><![CDATA[500]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
			<logger level="ERROR" doc:name="Log Error" message='#["[$(vars.correlationId)] INTERNAL_SERVER_ERROR - $(error.description) - $(error.detailedDescription)"]' />
		</on-error-propagate>

	</error-handler>

</mule>
