<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">

	<!-- Global Error Handler -->
	<error-handler name="global-error-handler" doc:name="Global Error Handler">
		
		<!-- APIKIT:BAD_REQUEST - 400 -->
		<on-error-propagate type="APIKIT:BAD_REQUEST" doc:name="On APIKIT:BAD_REQUEST">
			<ee:transform doc:name="Set 400 Response">
				<ee:message>
					<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	errorCode: "INVALID_PAYLOAD",
	message: "Bad request: Invalid path, query parameter, or body content",
	details: error.description default "",
	correlationId: vars.correlationId default uuid(),
	timestamp: now()
}]]></ee:set-payload>
				</ee:message>
				<ee:variables>
					<ee:set-variable variableName="httpStatus"><![CDATA[400]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
			<logger level="ERROR" doc:name="Log Error" message='#["[$(vars.correlationId)] APIKIT:BAD_REQUEST - $(error.description)"]' />
		</on-error-propagate>

		<!-- APIKIT:NOT_FOUND - 404 -->
		<on-error-propagate type="APIKIT:NOT_FOUND" doc:name="On APIKIT:NOT_FOUND">
			<ee:transform doc:name="Set 404 Response">
				<ee:message>
					<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	errorCode: "RESOURCE_NOT_FOUND",
	message: "Resource not found",
	details: error.description default "",
	correlationId: vars.correlationId default uuid(),
	timestamp: now()
}]]></ee:set-payload>
				</ee:message>
				<ee:variables>
					<ee:set-variable variableName="httpStatus"><![CDATA[404]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
			<logger level="WARN" doc:name="Log Error" message='#["[$(vars.correlationId)] APIKIT:NOT_FOUND - $(error.description)"]' />
		</on-error-propagate>

